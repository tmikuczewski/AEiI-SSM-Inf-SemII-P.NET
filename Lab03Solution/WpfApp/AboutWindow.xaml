<Window x:Class="WpfApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:WpfApp.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.AboutWindowTitle}" Height="100" Width="250"
        WindowStartupLocation="CenterScreen" Background="White" ResizeMode="NoResize">
	<Grid>
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{x:Static properties:Resources.Author}" TextAlignment="Center"/>
	</Grid>
</Window>